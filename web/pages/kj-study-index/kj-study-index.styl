@import url("@/css/fonts.styl")

html,body,main
    height: 100%

body
    margin: 0

    &.dark
        --background: #1a1a1a
        --main-text: white
        --kanji-highlight: #a7cb49
        // colour to use for some border lines
        --lines-colour: #bebebe
        --selected-border: #c1a653

        --button-hover: #f1f1f13d
        --button-active: #f1f1f169

        --button2-neutral-hover: #f5f5f51c
        --button2-neutral-active: #f5f5f545
        --button2-neutral-active-border: #e3e3e3
        --button2-neutral-hover-border: #bbb

        --button2-red-background: #be5d5d96
        --button2-red-border: #f28585
        --button2-red-hover-background: #893333
        --button2-red-hover-border: #c82727
        --button2-red-active-border: #e34747
        --button2-red-icon-colour: #faa7af

        --button2-green-bg: rgba(79,175,137,.26)
        --button2-green-border: #a0e18dc4
        --button2-green-icon: #87ee8f
        --button2-green-hover-bg: rgba(195,211,205,.34)
        --button2-green-active-border: #dddddd

        --button2-subactive-hover-bg: rgba(245,245,245,.22)

        --copied-text: #b7e441

    background-color: var(--background,)
    color: var(--main-text,)

main
    display: flex
    flex-direction: row
    overflow: hidden

    .contain
        width: 55%
        min-width: 500px
        overflow: hidden
        flex: 1
        position: relative

        .inner-contain2
            width 100%
            height: 100%
            overflow: auto
            padding: 15px 0 13px
            box-sizing: border-box

        .top
            margin-bottom: 10px
            padding: 0 10px

            .row1
                display: flex

                & > div
                    flex: 1

                .right
                    display: flex
                    justify-content: flex-end

                    .data-selector
                        width 80px
                        margin-right: 15px
                        background: transparent
                        border-color: var(--lines-colour,)
                        color: var(--main-text)

                        option
                            background: var(--background)

        .bottom
            display: flex
            justify-content: center
            margin-top: 10px

        .progress-bar-contain
            width: 99%
            height: 7px
            position: absolute
            bottom: 0

        &.expanded
            padding: 0

            .inner-contain
                width: 55%
                min-width: 500px
                margin: auto
                padding: 15px 0 13px

                @media (max-width: 700px)
                    width: 100%
                    min-width: auto

        @media (max-width: 700px)
            width: 100%
            min-width: auto

    .frame-zone
        flex: 1

        iframe
            width: 100%
            height: 100%
            padding: 0
            margin: 0
            border: 0