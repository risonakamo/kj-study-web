@import url("@/css/fonts.styl")

html,body,main
    height: 100%

body
    margin: 0

main
    display: flex
    flex-direction: row
    overflow: hidden

    .contain
        width: 55%
        min-width: 500px
        overflow: auto
        flex: 1
        padding: 15px 0 13px

        .top
            margin-bottom: 10px
            padding: 0 10px

            .row1
                display: flex

                & > div
                    flex: 1

                .right
                    display: flex
                    justify-content: flex-end

                    .data-selector
                        width 80px
                        margin-right: 15px

        .bottom
            display: flex
            justify-content: center
            margin-top: 10px

        &.expanded
            padding: 0

            .inner-contain
                width: 55%
                min-width: 500px
                margin: auto
                padding: 15px 0 13px

                @media (max-width: 700px)
                    width: 100%
                    min-width: auto

        @media (max-width: 700px)
            width: 100%
            min-width: auto

    .frame-zone
        flex: 1

        iframe
            width: 100%
            height: 100%
            padding: 0
            margin: 0
            border: 0