@import url("@/css/fonts.styl")

html,body,main
    height: 100%

body
    margin: 20px 0 50px

main
    display: flex
    flex-direction: row

    .contain
        width: 45%
        min-width: 610px
        overflow: auto
        flex: 1

        .top
            margin-bottom: 10px
            display: flex

            & > div
                flex: 1

            .right
                display: flex
                justify-content: flex-end

                .data-selector
                    width 80px
                    margin-right: 15px

        .bottom
            display: flex
            justify-content: center
            margin-top: 10px

        @media (max-width: 610px)
            width: 100%
            min-width: auto

    .frame-zone
        flex: 1

        iframe
            width: 100%
            height: 100%
            padding: 0
            margin: 0
            border: 0