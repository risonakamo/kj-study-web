@import url("@/css/fonts.styl")

body
    margin: 20px 0 50px

main
    display: flex
    justify-content: center
    flex-direction: column
    align-items: center

    .contain
        width: 45%
        min-width: 610px

        .top
            margin-bottom: 10px
            display: flex

            & > div
                flex: 1

            .right
                display: flex
                justify-content: flex-end

                .data-selector
                    width 80px
                    margin-right: 15px

        @media (max-width: 610px)
            width: 100%
            min-width: auto